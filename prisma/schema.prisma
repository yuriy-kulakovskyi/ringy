generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                 String   @id @default(uuid())
  userId             String   @unique
  type               String
  tokensLeft         Int
  expiresAt         Int?
  phoneNumber       String?
  remindBeforeMinutes Int?
}

model Calendar {
  id                 String   @id @default(uuid())
  userId             String   
  accountId          String
  apiKey             String
  provider           String
  isDeleted          Boolean  @default(false)
}

model Booking {
  id        String   @id @default(uuid())
  bookingId String   @unique
  startTime DateTime
  phone     String?
  calledAt  DateTime?
  attendees String[]
  organizer String

  processed Boolean  @default(false)

  createdAt DateTime @default(now())
}

model Outbox {
  id         String   @id @default(uuid())
  type       String
  payload    Json
  processed  Boolean  @default(false)
  reminderAt DateTime?
  createdAt  DateTime @default(now())
}

model CronLock {
  name     String   @id
  lockedAt DateTime @map("locked_at")

  @@map("cron_lock")
}